@model RentACar.ServicesInfrastructure.DTO.CarDetailsDTO

<div class="row">
    <div class="col-lg-3 mr-2">
        <div class="position-sticky p-3 d-flex flex-column border border-dark">
            <h4 class="text-info">@Model.Brand @Model.Model</h4>
            <small>
                From
                <a href="@Url.Action("Details","Portfolio", new { id = Model.PortfolioId })">@Model.PortfolioName</a>
                portfolio
            </small>
            <hr class="mr-0 ml-0" />
            <p>@Model.Description</p>
            <p>Price: @Model.Price€/day</p>
            <div class="pr-3 pl-3 mt-auto">
                <div class="row">
                    @if (Model.IsAvailable)
                    {
                        <p class="card-text text-success font-available align-self-center col-lg-7">Available</p>
                        if (Context.User.IsInRole("Customer"))
                        {
                            <a href="@Url.Action("Create","Reservation", new { carId = Model.CarId })" class="btn btn-primary text-center px-0 col-lg-5">Rent</a>
                        }
                        else
                        {
                            <a href="#" class="btn btn-primary text-center disabled px-0 col-lg-5">Rent</a>
                        }
                    }
                    else
                    {
                        <p class="card-text text-danger font-available align-self-center col-lg-7">Unavailable</p>
                        <a href="#" class="btn btn-primary text-center disabled px-0 col-lg-5">Rent</a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col p-3 border border-dark">
        <div id="gallery" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#gallery" data-slide-to="0" class="active"></li>
                <li data-target="#gallery" data-slide-to="1"></li>
                <li data-target="#gallery" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://picsum.photos/800/400" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://picsum.photos/800/400" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://picsum.photos/800/400" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#gallery" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#gallery" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="row m-4 font-options">
            <div class="m-2 col">
                <div class="m-2 row">
                    <div class="col p-0 text-right">
                        <span class="badge badge-primary ">Type</span>
                    </div>
                    <div class="col p-0 text-left">
                        <span class="badge badge-light">@Model.Type</span>
                    </div>
                </div>
                <div class="m-2 row">
                    <div class="col p-0 text-right">
                        <span class="badge badge-primary">Fuel</span>
                    </div>
                    <div class="col p-0 text-left">
                        <span class="badge badge-light">@Model.Fuel</span>
                    </div>
                </div>
            </div>
            <div class="m-2 col">
                <div class="m-2 row">
                    <div class="col p-0 text-right">
                        <span class="badge badge-primary">Transmision</span>
                    </div>
                    <div class="col p-0 text-left">
                        <span class="badge badge-light">@Model.Transmision</span>
                    </div>
                </div>
                <div class="m-2 row">
                    <div class="col p-0 text-right">
                        <span class="badge badge-primary">Number of doors</span>
                    </div>
                    <div class="col p-0 text-left">
                        <span class="badge badge-light input-group-append">@Model.NoDoors</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="@Url.Content("~/Styles/Details.css")" rel="stylesheet" type="text/css" />
}
