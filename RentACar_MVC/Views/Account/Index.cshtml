
<h1 class="title text-center">Members</h1>
<hr class=" mb-5" />
<div class="row justify-content-between">
    <div class="col-5 pr-2">
        <h3 class="title text-center mt-3">Managers</h3>
        <hr />
        <div class="d-flex justify-content-center mb-3">
            <button type="button" data-toggle="modal" data-target="#managerModal"
                    class="btn btn-info p-2 align-items-center justify-content-center d-flex">
                Add manager<i class="fa fa-user-plus icon-font-size ml-2"></i>
            </button>
            <!-- Modal -->
            <div class="modal fade" id="managerModal" tabindex="-1" role="dialog" aria-labelledby="managerModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="managerModalLabel">Create Manager</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                        </div>
                        
                    </div>
                </div>
            </div>
           
        </div>
        @{Html.RenderAction("Managers", "Account");}
    </div>
    <div class="col-7 border-double border-info pl-1">
        <h3 class="title text-center mt-3">Customers</h3>
        <hr class="ml-2" />
        <div class="col d-inline-flex align-items-end">
            <div class="col-3">
                <h6 class="title text-center">Username</h6>
                <hr class="my-1 bg-info" />
            </div>
            <div class="col-3">
                <h6 class="title text-center">Email</h6>
                <hr class="my-1 bg-info" />
            </div>
            <div class="col-4">
                <h6 class="title text-center">Phone number</h6>
                <hr class="my-1 bg-info" />
            </div>
        </div>
        @{Html.RenderAction("Customers", "Account");}
    </div>
</div>

<script type="text/javascript">
    
    $('#managerModal').on('show.bs.modal', function (e) {
        $('#managerModal .modal-body').load('@Url.Action("CreateManager", "Account")');
    })
</script>

@section Styles {
    <link href="@Url.Content("~/Styles/Members.css")" rel="stylesheet" type="text/css" />
}
