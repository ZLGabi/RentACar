@model List<RentACar.ServicesInfrastructure.DTO.UserDTO>

<div class="col mb-3 pr-1">
    @if (Model.Count > 0)
    {
        foreach (var user in Model)
        {
            <div class="my-1 border p-2 d-flex flex-row">
                <div class="d-flex flex-column">
                    <h6 class="title">Username</h6>
                    <h6 class="title">Email</h6>
                    <h6 class="title">PhoneNumber</h6>
                </div>
                <div class="d-flex flex-column">
                    <p class="mb-1">@user.Username</p>
                    <p class="mb-1">@user.Email</p>
                    <p class="mb-1">@user.PhoneNumber</p>
                </div>
            </div>
        }
    }
    else
    {
        <div class="my-1 border">
            <p class="text-center m-0">There are no managers.</p>
        </div>
    }
</div>
