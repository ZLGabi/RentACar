@model RentACar.ServicesInfrastructure.DTO.UserDTO
<div class="container">
    @using (Html.BeginForm("CreateManager", "Account", FormMethod.Post,
            new { enctype = "multipart/form-data" }))
    {
        <div class="d-flex justify-content-center">
            <div class="d-flex flex-column ">
                <div class="my-2">
                    @Html.LabelFor(m => m.Username)
                    <br />
                    @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "w-100" } })
                </div>
                <div class="my-2">
                    @Html.LabelFor(m => m.Email)
                    <br />
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "w-100" } })
                </div>
                <div class="my-2">
                    @Html.LabelFor(m => m.PhoneNumber)
                    <br />
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "w-100" })
                </div>
                <div class="my-2">
                    @Html.LabelFor(m => m.Photo)
                    <br />
                    @Html.TextBoxFor(m => m.Photo, new { type = "file" })
                </div>
                <div class="my-2">
                    @Html.LabelFor(m => m.Password)
                    <br />
                    @Html.PasswordFor(m => m.Password, new { @class = "w-100" })
                </div>
                <div class="my-2">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    <br />
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "w-100" })
                </div>
                <input type="submit" class="btn btn-primary mt-3" value="Create" />
            </div>
        </div>
    }
</div>
